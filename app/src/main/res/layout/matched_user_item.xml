<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layoutMatchedUser"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mui_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/_5dp"
        android:src="@drawable/monkey"
        app:civ_border_color="@color/devider"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <com.quintus.labs.datingapp.customfonts.MyTextView_Roboto_Bold
            android:id="@+id/mui_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="santosh Dash"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewStatus"
                android:layout_width="@dimen/chat_status_icon_size"
                android:layout_height="@dimen/chat_status_icon_size"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:paddingRight="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/msg_sending"
                android:visibility="visible" />

            <TextView
                android:id="@+id/mui_profession"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/chat_image"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:layoutDirection="ltr"
                android:maxLines="1"
                android:paddingRight="8dp"
                android:text="varun john message you in the myu app"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewNewMessageCount"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:background="@drawable/circle_new_message"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="bold"
                android:visibility="gone"
                />

        </LinearLayout>




    </LinearLayout>
</LinearLayout>
